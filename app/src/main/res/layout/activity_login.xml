<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login_by_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login by facebook"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_login_by_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login by google"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_login_by_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login by twitter"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_login_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:text="登录成功,type=xxx,token=xxx" />
    </LinearLayout>
</ScrollView>
