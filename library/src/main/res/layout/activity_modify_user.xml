<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_F4F4F4"
    android:orientation="vertical"
    >

    <include layout="@layout/include_head_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:background="@drawable/shape_bg_login"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clock_mp3_line"
            android:padding="12dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/Photo"
                android:textColor="@color/c_FF252525"
                android:textSize="16sp"/>


            <com.base.library.view.SelectableRoundedImageView
                android:id="@+id/iv_user"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                app:sriv_border_color="@color/c_9900732F"
                app:sriv_border_width="1dp"
                app:sriv_oval="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clock_mp3_line"
            android:padding="12dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_nike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Nickname"
                android:textColor="@color/c_FF252525"
                android:textSize="16sp"/>


            <EditText
                android:id="@+id/etv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/tv_nike"
                android:background="@color/bg_no"
                android:gravity="end"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:maxLines="1"
                android:textAlignment="textEnd"
                android:textColor="@color/c_FF001208"
                android:textColorHint="@color/c_4D001208"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_forgeot"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="33dp"
            android:layout_marginEnd="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/shape_btn_ok_gray"
            android:gravity="center"
            android:minHeight="44dp"
            android:minWidth="180dp"
            android:text="@string/Sign_Out"
            android:textColor="@color/c_FF252525"
            android:textSize="16sp"
            />

    </LinearLayout>


</LinearLayout>